# Trinity pool/explorer environment template for ISO builds
# Copy to /etc/trinity/pool.env and edit before enabling services.

# Admin credentials
ADMIN_USERNAME=CHANGE_ME_ADMIN_USERNAME
ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS

# Trinity daemon RPC
RPC_HOST=127.0.0.1
RPC_PORT=62620
RPC_USER=trinityuser
RPC_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_16_CHARS

# Pool settings
POOL_ADDRESS=YOUR_WALLET_ADDRESS
POOL_FEE=0.00
PAYOUT_THRESHOLD=0.1
MIN_DIFFICULTY=0.0001

# Web interface
WEB_HOST=127.0.0.1
WEB_PORT=8080
STRATUM_PORT=3333

# Database
DATABASE_URL=sqlite:////var/lib/trinity/pool.db

# Security
SECRET_KEY=CHANGE_ME_GENERATE_32_CHAR_SECRET_KEY
